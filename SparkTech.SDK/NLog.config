<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <targets>
    <target name="fileAsync" xsi:type="AsyncWrapper">
        <target name="logfile" xsi:type="File" fileName="sparktech_logs.txt" layout="${date:format=yyyyMMddHHmmss} ${message}" header="SparkTech.SDK log file" fileAttributes="ReadOnly"/>
    </target>
    <target name="console" xsi:type="Console" />
  </targets>
  <rules>
    <logger name="*" minlevel="Warn" writeTo="fileAsync" />
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>